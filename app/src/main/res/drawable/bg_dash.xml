<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#9F9F9F"
                android:dashGap="5dp"
                android:dashWidth="3dp" />

             <solid android:color="@color/white" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
</layer-list>