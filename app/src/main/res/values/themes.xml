<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcoliveApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="mediumTextViewSpinner" parent="Widget.AppCompat.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="titleAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSizeTopRight">11dp</item>
        <item name="cornerSizeTopLeft">11dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10PercentALL" parent="">
        <item name="cornerSizeTopRight">11dp</item>
        <item name="cornerSizeTopLeft">11dp</item>
        <item name="cornerSizeBottomLeft">11dp</item>
        <item name="cornerSizeBottomRight">11dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize5PercentALL" parent="">
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent30" parent="">
        <item name="cornerSizeTopRight">80dp</item>
        <item name="cornerSizeTopLeft">80dp</item>
        <item name="cornerSizeBottomLeft">80dp</item>
        <item name="cornerSizeBottomRight">80dp</item>
    </style>

    <style name="MyRatingBarTwo" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
    </style>

    <style name="Theme.MyApp.Dialog.Alert" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Text Color for Buttons -->
        <item name="colorPrimary">@color/black</item>

        <!-- Background Color-->
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Text Color for title and message -->
        <!-- <item name="colorOnSurface">@color/white</item>-->
        <!-- Style for positive button -->
        <!--  <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>-->
        <!-- Style for negative button -->
        <!-- <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>-->
    </style>

    <style name="roundedImageViewRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="cornerShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="switchtheam" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/black</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/black
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">17dp</item>
        <item name="cornerSizeTopLeft">17dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/color_333333</item>
        <item name="hintTextColor">@color/color_333333</item>
        <item name="android:textColorHint">@color/color_333333</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingStart">@dimen/_15ssp</item>
        <item name="android:paddingEnd">@dimen/_15ssp</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RatingBar" parent="Theme.EcoliveApp">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/black</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/black</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item>    <!--days of the week-->
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.EcoliveApp.Fullscreen" parent="Theme.EcoliveApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.EcoliveApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.EcoliveApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>