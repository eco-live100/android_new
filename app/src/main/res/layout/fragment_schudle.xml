<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECECEC"
        tools:context=".taximodule.SavelocationActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_50sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/sourcetodest_icon" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/startLocation"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:fontFamily="@font/roboto_medium"
                                android:maxLines="1"
                                android:gravity="center_vertical"
                                 android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="#D6E2ED" />

                            <TextView
                                android:id="@+id/DestinationLocation"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="Where to ?"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="@dimen/_12sdp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/plus_icon" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat3">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/star_img" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="5"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Saved places"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/icon_arrow_forword" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:id="@+id/view17"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#D6E2ED"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat4"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view17">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/pin" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="5"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Set destination on map"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/SetDestinationMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/icon_arrow_forword" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:cardUseCompatPadding="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter dates"
                        android:alpha="0.7"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/roboto_medium" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="From:"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#9F9F9F"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fromDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="Sun,Oct 30"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/calender1"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"

                            android:src="@drawable/calender_icon"
                            android:layout_height="@dimen/_20sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#D6E2ED"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="To:"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#9F9F9F"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/toDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="Sun,Oct 30"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/calender2"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:src="@drawable/calender_icon"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:cardUseCompatPadding="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set pickup time(s)"

                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:alpha="0.7"
                        android:fontFamily="@font/roboto_medium" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_marginTop="@dimen/_5sdp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:text="@string/from_destination"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#9F9F9F"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fromDestinationTime"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="11:00 AM"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/timePickerFrom"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:padding="2dp"
                            android:src="@drawable/clock_icon"
                            android:layout_height="@dimen/_20sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#D6E2ED"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:text="@string/to_destination"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#9F9F9F"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/toDestinationTime"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="10:30 PM"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/timePickerTo"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:padding="2dp"
                            android:src="@drawable/clock_icon"
                            android:layout_height="wrap_content"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirmButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/Confirm"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_14sdp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/bg_blue_round_button"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_14sdp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/black"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="@drawable/bg_blue_round_button"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
