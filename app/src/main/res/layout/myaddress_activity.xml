<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/color_F5F5F5"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarAddress"
        layout="@layout/custom_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/addressRecycle"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_10ssp"
        app:layout_goneMarginBottom="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@+id/addressAddBtn"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAddress"
        android:layout_height="0dp"/>


    <TextView
        android:id="@+id/addressAddBtn"
        android:layout_width="match_parent"
        android:text="Add New Address"
        android:padding="@dimen/_8sdp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:background="@drawable/bg_blue_round_button"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>