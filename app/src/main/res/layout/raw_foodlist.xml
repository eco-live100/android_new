<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/_10ssp"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:id="@+id/constraintNext"
        android:background="@color/white"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/foodImage"
          android:layout_width="match_parent"
            android:src="@drawable/ic_food"
          android:scaleType="fitXY"

          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_height="@dimen/_130sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@drawable/bg_green_round_one_side"
            android:fontFamily="@font/roboto_regular"
            android:text="Spend $100,Save $10"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_heart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/foodRetroName"
            android:text="The Food Restaurant"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/color_333333"
            app:layout_constraintTop_toBottomOf="@+id/foodImage"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/foodRetroSubTitle"
            android:text="$250 Delivery Fee  10-20 min"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:layout_marginStart="10dp"
            android:paddingBottom="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/color_707070"
            app:layout_constraintTop_toBottomOf="@+id/foodRetroName"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="4.6"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/foodRetroSubTitle"
            app:layout_constraintTop_toTopOf="@+id/foodRetroSubTitle"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableStart="@drawable/ic_fill_stare"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>