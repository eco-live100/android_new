<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pharmacy_module.CreateHospitalActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar_without_round" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat13"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="#ECECEC"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/hospitalName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_edittext_blue2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/name"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_edittext_blue2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/mobile_number"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/services"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_edittext_blue2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:hint="Services"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp" />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/idNumberTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_edittext_blue2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_id_number"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:text="@string/profession"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <RadioGroup
                    android:id="@+id/professionRG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dimen_10dp">

                    <RadioButton
                        android:id="@+id/doctorRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I am a Doctor"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <RadioButton
                        android:id="@+id/nurseLpnRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I am a Nurse (LPN)"
                        android:textColor="@color/black"
                        />

                    <RadioButton
                        android:id="@+id/nurseNpRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I am a Nurse (NP)"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:id="@+id/pharmacistRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I am a Pharmacist"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:id="@+id/dentistRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I am a Dentist"
                        android:textColor="@color/black"
                        />

                </RadioGroup>



                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/consultFee"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"

                    android:background="@drawable/bg_edittext_blue2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/consult_fee"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/hospitalLocation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_edittext_blue2"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/location"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp" />

                <!--<androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableTint="@color/color_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:text="Select your monthly work schedule"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:drawableEndCompat="@drawable/calender_icon" />-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableTint="@color/color_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:text="@string/select_your_visiting_hour"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="@string/from"
                            android:layout_marginHorizontal="10dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#9F9F9F"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fromVisitingTimeTv"
                            android:layout_width="wrap_content"
                            android:hint="11:00 AM"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/fromVisitingTimeIcon"
                            android:layout_width="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/clock_icon"
                            android:layout_height="@dimen/_20sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="@string/to"
                            android:layout_marginHorizontal="10dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#9F9F9F"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/toVisitingTimeTv"
                            android:layout_width="wrap_content"
                            android:hint="10:30 PM"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/toVisitingTimeIcon"
                            android:layout_width="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/clock_icon"
                            android:layout_height="@dimen/_20sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableTint="@color/color_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:text="@string/add_another_visiting_hour"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:layout_margin="@dimen/_10sdp">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="@string/from"
                            android:layout_marginHorizontal="10dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#9F9F9F"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fromAnotherVisitingTimeTv"
                            android:layout_width="wrap_content"
                            android:hint="11:00 AM"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/fromAnotherVisitingTimeIcon"
                            android:layout_width="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/clock_icon"
                            android:layout_height="@dimen/_20sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="@string/to"
                            android:layout_marginHorizontal="10dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="#9F9F9F"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/toAnotherVisitingTimeTv"
                            android:layout_width="wrap_content"
                            android:hint="10:30 PM"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/toAnotherVisitingTimeIcon"
                            android:layout_width="wrap_content"
                            android:padding="2dp"
                            android:src="@drawable/clock_icon"
                            android:layout_height="@dimen/_20sdp"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <CheckBox
                    android:id="@+id/saveAndRepeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/save_amp_repeat_this_schedule_time_every_month"
                    android:textColor="@color/black" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/hospitalbackground"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_dash">

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_paperclip_chat"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Background Image"
                            android:textColor="#9F9F9F"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:text="Upload a picture of a file of your hospital/pharmacy "
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_11"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/backgroundImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/hospitalLogo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_dash">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_paperclip_chat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Logo Image"
                            android:textColor="#9F9F9F"
                            android:textSize="@dimen/sp_14" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:text="Upload a picture of a file of your hospital/pharmacy "
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_11"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logoImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/createBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_blue_round_button"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:backgroundTint="@color/color_050D4C"
                    android:text="Create"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginHorizontal="@dimen/_15sdp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
