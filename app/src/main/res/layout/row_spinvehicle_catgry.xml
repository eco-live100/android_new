<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rowSpinSubTitle"
        android:layout_width="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/circle_red10"
        app:layout_constraintBottom_toBottomOf="@+id/rowSpinTitle"
        app:layout_constraintTop_toTopOf="@+id/rowSpinTitle"
        android:layout_height="@dimen/_10ssp"/>

    <TextView
        android:id="@+id/rowSpinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:padding="@dimen/_10ssp"
        android:text="text"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/rowSpinSubTitle"
        app:layout_constraintTop_toTopOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>