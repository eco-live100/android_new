<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true"
            card_view:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/_10ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/addressName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Cp sharma"
                    android:maxLines="1"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/addressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_map15"
                    android:drawablePadding="@dimen/_10ssp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Home"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/_14ssp" />


                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:text="pizza del duamo, 80777 Firenze fi, italy"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/_12ssp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="+91774848484"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />
                    <TextView
                        android:id="@+id/Delete"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Delete"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>