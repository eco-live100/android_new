<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F5F5"
        tools:context=".rider_module.RiderSignupActivity">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.88" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/ic_login"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Rider Sign up"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_25"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_edittext"
            android:drawableEnd="@drawable/ic_user"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/roboto_regular"
            android:hint="Name"
            android:paddingStart="@dimen/_10sdp"
            android:paddingRight="@dimen/_12sdp"
            android:textColorHint="@color/color_333333"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/bg_edittext"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/roboto_regular"
            android:drawableEnd="@drawable/ic_email"
            android:hint="Email"
            android:paddingStart="@dimen/_10sdp"
            android:paddingRight="@dimen/_12sdp"
            android:textColorHint="@color/color_333333"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        <EditText
            android:id="@+id/editTextMobile"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/bg_edittext"
            android:drawableEnd="@drawable/ic_email"
            android:hint="Mobile number"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="@dimen/sp_16"
            android:paddingRight="@dimen/_12sdp"
            android:textColorHint="@color/color_333333"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/roboto_regular"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/bg_edittext"
            android:drawableEnd="@drawable/ic_lock"
            android:hint="Password"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingRight="@dimen/_12sdp"
            android:textColorHint="@color/color_333333"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/editTextMobile" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="0dp"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/bg_edittext"
            android:drawableEnd="@drawable/ic_lock"
            android:hint="Confirm password"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingRight="@dimen/_12sdp"
            android:textColorHint="@color/color_333333"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintTop_toBottomOf="@+id/editText3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/bg_blue_round_button"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="@dimen/_16sdp"
            android:text="SIGN UP"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline1">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Already have an account?"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/signInLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Sign in"
                android:textColor="@color/color_blue"
                android:textDirection="locale"
                android:textSize="@dimen/sp_13"
                app:layout_constraintStart_toEndOf="@+id/text1"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>