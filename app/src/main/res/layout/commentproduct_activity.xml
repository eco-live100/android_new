<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F5F5">

        <include
            android:id="@+id/toolbarComment"
            layout="@layout/custom_toolbar" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Title"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarComment" />


        <EditText
            android:id="@+id/etTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:background="@drawable/bg_edittext"
            android:paddingTop="@dimen/_10ssp"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingStart="@dimen/_15ssp"
            android:paddingEnd="@dimen/_15ssp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Comment"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"

            app:layout_constraintTop_toBottomOf="@+id/etTitle" />


        <EditText
            android:id="@+id/etComment"
            android:layout_width="0dp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:background="@drawable/bg_edittext_5dp"
            android:padding="@dimen/_10ssp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_12ssp"
            android:gravity="top"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvComment" />


        <TextView
            android:id="@+id/tvSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/bg_blue_round_button"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Send"

            app:layout_constraintTop_toBottomOf="@+id/etComment"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>