<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user_module.NotifactionActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar_without_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/toolbar" >
           <TextView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_5sdp"
               android:fontFamily="@font/roboto_regular"
               android:text="Hey lorem ipsum this is dummy notification text .hope you are doing well"
               android:textColor="@color/black"
               android:textSize="@dimen/_13sdp"
               android:drawableStart="@drawable/ic_bell"
               android:drawablePadding="@dimen/_15sdp"
               android:drawableTint="@color/darkblue"
               android:layout_marginHorizontal="@dimen/_10sdp"
              />
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/grey"
               android:layout_marginTop="@dimen/_5sdp"
               app:layout_constraintTop_toBottomOf="@+id/txt"/>
           <TextView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_5sdp"
               android:fontFamily="@font/roboto_regular"
               android:text="Hey lorem ipsum this is dummy notification text .hope you are doing well"
               android:textColor="@color/black"
               android:textSize="@dimen/_13sdp"
               android:drawableStart="@drawable/ic_bell"
               android:drawablePadding="@dimen/_15sdp"
               android:drawableTint="@color/darkblue"
               android:layout_marginHorizontal="@dimen/_10sdp"
                />
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/grey"
               android:layout_marginTop="@dimen/_5sdp"
               app:layout_constraintTop_toBottomOf="@+id/txt"/>

           <TextView
               android:id="@+id/txt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_5sdp"
               android:fontFamily="@font/roboto_regular"
               android:text="Hey lorem ipsum this is dummy notification text .hope you are doing well"
               android:textColor="@color/black"
               android:textSize="@dimen/_13sdp"
               android:drawableStart="@drawable/ic_bell"
               android:drawablePadding="@dimen/_15sdp"
               android:drawableTint="@color/darkblue"
               android:layout_marginHorizontal="@dimen/_10sdp"
               />
           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/grey"
               android:layout_marginTop="@dimen/_5sdp"
               app:layout_constraintTop_toBottomOf="@+id/txt"/>
       </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
