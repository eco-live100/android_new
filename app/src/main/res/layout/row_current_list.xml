<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/white"
        android:id="@+id/viewProductDetails"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/CurrentOrderProfileImage"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_10sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10PercentALL"
            android:src="@drawable/ic_user_blue"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CurrentOrderUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Angie O. Plasty"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toEndOf="@+id/CurrentOrderProfileImage"
            app:layout_constraintTop_toTopOf="@+id/CurrentOrderProfileImage" />

        <TextView
            android:id="@+id/CurrentOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="20 Nov 2020"
            android:textColor="@color/color_9F9F9F"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/imageView22"
            app:layout_constraintStart_toEndOf="@+id/imageView22"
            app:layout_constraintTop_toBottomOf="@+id/CurrentOrderUserName" />

        <TextView
            android:id="@+id/productCategory4"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Delivery "
            android:textColor="@color/color_9F9F9F"
            android:textSize="@dimen/sp_14"

            app:layout_constraintStart_toStartOf="@+id/imageView22"
            app:layout_constraintTop_toBottomOf="@+id/CurrentOrderDate" />

        <TextView
            android:id="@+id/CurrentDeliveryEstimateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="15 MIN "
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"

            app:layout_constraintEnd_toEndOf="@+id/productCategory4"
            app:layout_constraintStart_toStartOf="@+id/imageView22"
            app:layout_constraintTop_toBottomOf="@+id/productCategory4" />

        <TextView
            android:id="@+id/productCategory5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Earn"
            android:textColor="@color/color_9F9F9F"
            android:textSize="@dimen/sp_14"

            app:layout_constraintStart_toEndOf="@+id/productCategory4"
            app:layout_constraintTop_toBottomOf="@+id/CurrentOrderDate" />

        <TextView
            android:id="@+id/CurrentOrderEarning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="$768"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"

            app:layout_constraintEnd_toStartOf="@+id/productCategory6"
            app:layout_constraintStart_toEndOf="@+id/productCategory4"
            app:layout_constraintTop_toBottomOf="@+id/productCategory5" />

        <TextView
            android:id="@+id/productCategory6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Payment"
            android:textColor="@color/color_9F9F9F"
            android:textSize="@dimen/sp_14"

            app:layout_constraintStart_toEndOf="@+id/productCategory5"
            app:layout_constraintTop_toBottomOf="@+id/CurrentOrderDate" />

        <TextView
            android:id="@+id/CurrentOrderPaymentMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Debit card"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"


            app:layout_constraintStart_toEndOf="@+id/productCategory5"
            app:layout_constraintTop_toBottomOf="@+id/productCategory6" />

        <TextView
            android:id="@+id/CurrentOrderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="03:20 PM"
            android:textColor="@color/color_9F9F9F"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/imageView22"
            app:layout_constraintStart_toEndOf="@+id/imageView23"
            app:layout_constraintTop_toBottomOf="@+id/CurrentOrderUserName" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toStartOf="@+id/CurrentOrderUserName"
            app:layout_constraintTop_toBottomOf="@+id/CurrentOrderUserName" />

        <ImageView
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/imageView23"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/ic_user"
            app:layout_constraintStart_toEndOf="@+id/CurrentOrderDate"
            app:layout_constraintTop_toBottomOf="@+id/CurrentOrderUserName" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/bg_blue_round_button"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="ACCEPT"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDecline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/CurrentDeliveryEstimateTime"
            app:layout_constraintTop_toBottomOf="@+id/CurrentDeliveryEstimateTime" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDecline"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/bg_gray_round_button"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="DECLINE"
            android:textColor="@color/color_333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btnAccept"
            app:layout_constraintTop_toTopOf="@+id/btnAccept" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>