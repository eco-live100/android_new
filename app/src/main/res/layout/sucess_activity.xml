<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5">


    <ImageView
        android:id="@+id/sucessCurve"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:src="@drawable/curve_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/sucessThank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="-30dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="Thank you"
        android:textColor="@color/color_F5F5F5"
        android:textSize="@dimen/_44sdp"
        app:layout_constraintBottom_toTopOf="@+id/sucessThumbImg" />


    <ImageView
        android:id="@+id/sucessThumbImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/ic_thumb"
        app:layout_constraintBottom_toBottomOf="@+id/sucessCurve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sucessText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="success"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/sucessCurve" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="You're successfully transferred\nmoney."
        android:textColor="@color/color_333333"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@+id/sucessText" />

    <ImageView
        android:id="@+id/sucessBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/ic_back"
        android:tint="@color/color_333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseAppTint" />
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>