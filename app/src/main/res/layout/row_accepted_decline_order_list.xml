<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/bg_white_round_without_stroke_10dp"
        android:id="@+id/viewProductDetails"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/acceptedDeclineOrderId"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="0345"
            android:textColor="@color/color_9F9F9F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/acceptedDeclineOrderItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="2 x Smart watch"
            android:textColor="@color/color_9F9F9F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acceptedDeclineOrderTitle" />

        <TextView
            android:id="@+id/acceptedDeclineOrderItemPrice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="$ 410"
            android:textColor="@color/color_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acceptedDeclineOrderTitle" />

        <TextView
            android:id="@+id/acceptedDeclineOrderItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="2 x Smart watch"
            android:textColor="@color/color_9F9F9F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acceptedDeclineOrderItem1" />

        <TextView
            android:id="@+id/acceptedDeclineOrderTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Toatal bill $ 620"
            android:textColor="@color/color_333333"
            app:layout_constraintBottom_toBottomOf="@+id/btnAccept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view12" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/bg_blue_round_button"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="ACCEPT"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDecline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/acceptedDeclineOrderTotalAmount"
            app:layout_constraintTop_toBottomOf="@+id/view12" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDecline"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/bg_gray_round_button"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="DECLINE"
            app:layout_constraintStart_toEndOf="@+id/btnAccept"
            android:textColor="@color/color_333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view12" />

        <TextView
            android:id="@+id/acceptedDeclineOrderItemPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="$ 210"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/color_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acceptedDeclineOrderItem1" />

        <TextView
            android:id="@+id/acceptedDeclineOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="9 March 2021"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/color_9F9F9F"
            app:layout_constraintStart_toEndOf="@+id/view10"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/acceptedDeclineOrderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="6:30 PM"
            android:textColor="@color/color_9F9F9F"
            app:layout_constraintStart_toEndOf="@+id/view11"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view10"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@color/color_9F9F9F"
            app:layout_constraintBottom_toBottomOf="@+id/acceptedDeclineOrderId"
            app:layout_constraintStart_toEndOf="@+id/acceptedDeclineOrderId"
            app:layout_constraintTop_toTopOf="@+id/acceptedDeclineOrderId" />

        <View
            android:id="@+id/view11"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_9F9F9F"
            app:layout_constraintBottom_toBottomOf="@+id/acceptedDeclineOrderId"
            app:layout_constraintStart_toEndOf="@+id/acceptedDeclineOrderDate"
            app:layout_constraintTop_toTopOf="@+id/acceptedDeclineOrderId" />

        <TextView
            android:id="@+id/acceptedDeclineOrderTitle"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="John doe's 10 TH orders"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acceptedDeclineOrderId" />

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="#D4D4D4"
            app:layout_constraintTop_toBottomOf="@+id/acceptedDeclineOrderItem2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>