<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraintAddProductStepThree"
        android:paddingTop="@dimen/_20sdp"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Product description"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Product price"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        <TextView
            android:id="@+id/textView85"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Product color"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText21" />

        <TextView
            android:id="@+id/textView87"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="Product delivery type"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewColorVariation" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/bg_edittext_gray"
            android:fontFamily="@font/roboto_regular"
            android:hint="Enter product name"
            android:gravity="start"
            android:paddingTop="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:textColorHint="@color/color_9F9F9F"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_333333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView83"
            app:layout_constraintTop_toBottomOf="@+id/textView83" />

        <EditText
            android:id="@+id/editText15"
            android:layout_width="0dp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/bg_edittext_gray"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:gravity="start"
            android:hint="Live"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_9F9F9F"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView83"
            app:layout_constraintTop_toBottomOf="@+id/textView84" />

        <EditText
            android:id="@+id/editText19"
            android:layout_width="0dp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/bg_edittext_gray"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:hint="Live"
            android:padding="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_9F9F9F"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView83"
            app:layout_constraintTop_toBottomOf="@+id/textView84" />

        <EditText
            android:id="@+id/editText21"
            android:layout_width="0dp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/bg_edittext_gray"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Online"
            android:padding="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_9F9F9F"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView83"
            app:layout_constraintTop_toBottomOf="@+id/editText15" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewColorVariation"
            android:background="@drawable/bg_edittext_gray"
            android:layout_width="0dp"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView83"
            app:layout_constraintTop_toBottomOf="@+id/textView85"
            tools:listitem="@layout/row_add_product_color_variation" />
        <EditText
            android:id="@+id/editText17"
            android:layout_width="0dp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/bg_edittext_gray"
            android:fontFamily="@font/roboto_regular"
            android:hint="product delivery type"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_9F9F9F"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView83"
            app:layout_constraintTop_toBottomOf="@+id/textView87" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/bg_blue_round_button"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Upload"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText17" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>